- model_class = BookingEmail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @booking_emails.each do |booking_email|
      %tr
        %td= link_to booking_email.id, booking_email_path(booking_email)
        %td= booking_email.body
        %td=l booking_email.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_booking_email_path(booking_email), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), booking_email_path(booking_email), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_booking_email_path, :class => 'btn btn-primary'
