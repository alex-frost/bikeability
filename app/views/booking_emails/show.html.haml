- model_class = BookingEmail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @booking_email.body

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), booking_emails_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_booking_email_path(@booking_email), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), booking_email_path(@booking_email), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
