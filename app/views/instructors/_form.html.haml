= form_for @instructor do |f|
  - if @instructor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@instructor.errors.count, "error")} prohibited this instructor from being saved:"
      %ul
        - @instructor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :telephone_number
    = f.telephone_field :telephone_number
  .field
    = f.label :post_code
    = f.text_field :post_code
  .control-group
    = f.label :note, :class => 'control-label'
    .controls
      = f.text_area :note, :class => 'field span6'
  .actions
    = f.submit 'Save'
