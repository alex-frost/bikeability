- model_class = School
.page-header
  %h1=t '.title', :default => "Schools"
%table.table.table-striped
  %thead
    %tr
      %th= sortable "school_name" #model_class.human_attribute_name(:school_name)
      %th= sortable "teacher_name" #model_class.human_attribute_name(:teacher_name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @schools.each do |school|
      %tr
        %td= link_to school.school_name, school_path(school)
        %td= link_to school.teacher_name, school_path(school)
        %td
          = link_to "Send booking email", new_school_booking_email_path(school), class: "btn btn-mini"
          = link_to "Create booking", new_school_booking_path(school), class: "btn btn-mini";
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_school_path(school), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), school_path(school), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_school_path, :class => 'btn btn-primary'
