- model_class = School
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:school_name) + ':'
  %br
  = @school.school_name
%p
  %strong= model_class.human_attribute_name(:address_line_1) + ':'
  %br
  = @school.address_line_1
%p
  %strong= model_class.human_attribute_name(:address_line_2) + ':'
  %br
  = @school.address_line_2
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @school.city
%p
  %strong= model_class.human_attribute_name(:postcode) + ':'
  %br
  = @school.postcode
%p
  %strong= model_class.human_attribute_name(:telephone_number) + ':'
  %br
  = @school.telephone_number
%p
  %strong= model_class.human_attribute_name(:teacher_name) + ':'
  %br
  = @school.teacher_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @school.email

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), schools_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_school_path(@school), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), school_path(@school), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
