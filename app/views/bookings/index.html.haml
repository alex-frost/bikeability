- model_class = Booking
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th School teacher
      %th Start time
      %th Num children
      %th Required bikes
      %th Required helmets
      %th
      %th
      %th
  %tbody
  - @bookings.each do |booking|
    %tr
      %td= booking.school_teacher_id
      %td= booking.start_time
      %td= booking.num_children
      %td= booking.required_bikes
      %td= booking.required_helmets 
      %td= link_to 'Show', [@school_teacher,@booking]
      %td= link_to 'Edit', [:edit,@school_teacher,@booking]
      %td= link_to 'Destroy', [@school_teacher,@booking], :method => :delete, :data => { :confirm => 'Are you sure?' }

