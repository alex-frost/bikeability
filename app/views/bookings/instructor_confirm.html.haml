%p
  %b School :
  = @booking.school.school_name

%p
  %b Teacher:
  = @booking.school.teacher_name
%p
  %b Start time:
  = @booking.start_time
%p
  %b Num children:
  = @booking.num_children
%p
  %b Required bikes:
  = @booking.required_bikes
%p
  %b Required helmets:
  = @booking.required_helmets
%p
  %b Other Instructor
  = @other_instructor.name 
%p
= form_for @booking do |f|
  .field
    = f.label @instructor_available, "Are you available?"
    = f.radio_button @instructor_available, :true
    = label @instructor_available, "Yes"
    = f.radio_button @instructor_available, :false, checked: true
    = label @instructor_available, "No"
  .actions
    = f.submit "Confirm"
