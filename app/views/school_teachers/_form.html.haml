= form_for @school_teacher, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :school, :class => 'control-label'
    .controls
      = f.text_field :school, :class => 'text_field'
  .control-group
    = f.label :address_line_1, :class => 'control-label'
    .controls
      = f.text_field :address_line_1, :class => 'text_field'
  .control-group
    = f.label :address_line_2, :class => 'control-label'
    .controls
      = f.text_field :address_line_2, :class => 'text_field'
  .control-group
    = f.label :city, :class => 'control-label'
    .controls
      = f.text_field :city, :class => 'text_field'
  .control-group
    = f.label :postcode, :class => 'control-label'
    .controls
      = f.text_field :postcode, :class => 'text_field'
  .control-group
    = f.label :telephone_number, :class => 'control-label'
    .controls
      = f.text_field :telephone_number, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :uuid, :class => 'control-label'
    .controls
      = f.text_field :uuid, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), school_teachers_path, :class => 'btn'
