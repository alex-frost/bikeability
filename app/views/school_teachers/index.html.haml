- model_class = SchoolTeacher
.page-header
  %h1=t '.title', :default => "Schools"
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:school)
      %th= model_class.human_attribute_name(:teacher)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @school_teachers.each do |school_teacher|
      %tr
        %td= link_to school_teacher.school, school_teacher_path(school_teacher)
        %td= link_to school_teacher.name, school_teacher_path(school_teacher)
        %td
          = link_to "Send booking email", new_school_teacher_booking_email_path(school_teacher), class: "btn btn-mini"
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_school_teacher_path(school_teacher), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), school_teacher_path(school_teacher), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_school_teacher_path, :class => 'btn btn-primary'
